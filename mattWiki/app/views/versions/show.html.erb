<h1><%= @version.title %></h1>
<p>Written by: <%= @author.username %></p>
<p><%= @version.content %></p>


<% if @version_count > 1  %>
<p>This article has <%= @version_count %> previous versions</p>
  <% counter = 1 %>
  <% @versions.each do |version| %>
    <%= counter %> <%= link_to version.title, article_version_path(@article.id, version.id) %> <br>
    <% counter += 1 %>
  <% end %>
<%end  %>
